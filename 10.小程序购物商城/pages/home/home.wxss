/* pages/home/home.wxss */
.item-image{
  width: 100%;
}
.recommend{
  display: flex;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 16rpx solid #eee;
}
.recommend-item{
  flex: 1;
  text-align: center;
}
.recommend-image{
  width: 160rpx;
  height: 160rpx;
}
.recommend-item text{
  font-size: 28rpx;
}
.popular image{width: 100%;}
.goods{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 20rpx 8rpx;

}
.goods .item{
  width: 48%;
  position: relative;
}

.back-top{
  position: fixed;
  right: 16rpx;
  bottom: 10rpx;
}
.back-top image{
  width: 90rpx;
  height: 90rpx;
}
.fixed{
  position: fixed;
  left:0;
  right: 0;
  top: 0;
  background-color: #fff;
  /* 设置index */
  z-index: 9;
}